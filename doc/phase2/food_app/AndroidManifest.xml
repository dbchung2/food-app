            android:name="com.example.food_app.UserProfile"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name="com.example.food_app.CommentsAdapter"
            android:label="@string/title_activity_comments_adapter" >
        </activity>
        <activity
            android:name="com.example.food_app.TestScreen"
            android:label="@string/title_activity_test_screen" >
        </activity>
        <activity
            android:name="com.example.food_app.CommentAdapter"
            android:label="@string/title_activity_comment_adapter" >
        </activity>
        <activity
            android:name="com.example.food_app.AddToWishlist"
            android:label="@string/title_activity_add_to_wishlist"
            android:parentActivityName="com.example.food_app.Wishlist" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.food_app.Wishlist" />
        </activity>
        <activity
            android:name="com.example.food_app.Restaurant"
            android:label="@string/title_activity_restaurant" >

        </activity>
