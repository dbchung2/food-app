<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WishListItemView" >

    <RatingBar
        android:id="@+id/wishlistRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/removeFromWishlist"
        android:layout_alignLeft="@+id/aboveRating"
        android:layout_alignStart="@+id/aboveRating"/>

    <TextView
        android:id="@+id/aboveRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average User Rating:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_above="@+id/wishlistRating"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" android:textSize="20dp"/>

    <Button
        android:id="@+id/removeFromWishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wishlistRating"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/wishlistRating"
        android:layout_marginBottom="68dp"
        android:text="Ate it?" />

    <TextView
        android:id="@+id/wishListRestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RestName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView11"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/wishListFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FoodName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant:"
            android:id="@+id/textView11"
            android:textSize="20dp"
            android:layout_marginBottom="29dp"
            android:layout_above="@+id/aboveRating"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wishImageView"
            android:layout_below="@+id/wishListFoodName"
            android:layout_alignLeft="@+id/wishListFoodName"
            android:layout_alignStart="@+id/wishListFoodName"
            android:layout_above="@+id/wishListRestName"
            android:layout_alignRight="@+id/wishListRestName"
            android:layout_alignEnd="@+id/wishListRestName"/>

</RelativeLayout>
