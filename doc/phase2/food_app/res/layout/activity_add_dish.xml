<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".add_dish" >
    
    <EditText
        android:id="@+id/menuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/dish_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/category"
        android:layout_alignLeft="@+id/category"
        android:layout_alignStart="@+id/category"
        android:layout_marginBottom="62dp"/>
    
    <EditText
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Category"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="74dp"
        android:layout_above="@+id/addDishPrice"
        android:layout_alignLeft="@+id/addDishPrice"
        android:layout_alignStart="@+id/addDishPrice"/>
    
    <Button
        android:id="@+id/submitToAddDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addDish" android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <EditText android:id="@+id/addDishPrice" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="10"
              android:hint="Price ($)"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:layout_above="@+id/submitToAddDish"
              android:layout_alignRight="@+id/submitToAddDish"
              android:layout_alignEnd="@+id/submitToAddDish"
              android:layout_marginBottom="58dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/menuname"
            android:layout_alignStart="@+id/menuname"
            android:layout_above="@+id/menuname"
            android:layout_alignRight="@+id/menuname"
            android:layout_alignEnd="@+id/menuname"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"
            android:id="@+id/addImage"
            android:layout_above="@+id/submitToAddDish"
            android:layout_alignLeft="@+id/addDishPrice"
            android:layout_alignStart="@+id/addDishPrice"
            android:onClick="addImage"
            />


</RelativeLayout>
